@using WebPOS.BlazorUI.Shared.Components.Modals
@inject Blazored.SessionStorage.ISessionStorageService session
@inject NavigationManager navManager;
<div class="container">
    @if (notif?.ResultMsg != null)
    {
        <div class="row">
            <div class="error-notif ">
                <em>@notif.ResultMsg</em>
            </div>
        </div>
    }
    @if (showConfirmModal)
    {
        <div class="row">
            <ConfirmModal ConfirmationResult="getConfirmModalResult" DataName="project item"></ConfirmModal>
        </div>
    }
    <div class="row m-2">
        <button class="btn btn-primary" @onclick="()=> { selectedItem = null; showManageItem = true; }">Add Item</button>
    </div>
    <div class="row">
        <div class="c-table">
            <div class="c-table-header">
                <div class="c-table-search">
                    <span class="oi oi-magnifying-glass" />
                    <input type="text" name="search" @onchange="SearchItem" />
                </div>
            </div>
            <div class="c-table-body text-center">
                <table>
                    <thead>
                        <tr>
                            <th colspan="2">
                                Item Name
                            </th>
                            <th>
                                Required Quantity
                            </th>
                            <th>
                                Remaining Quantity
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (pageList != null)
                        {
                            foreach (var proj in pageList)
                            {
                                <tr class="@IsActive(proj.ProjectItemId)" @onclick="()=>RowClick(proj.ProjectItemId)">
                                    <td colspan="2">
                                        @proj.Item.Description
                                    </td>
                                    <td>
                                        @proj.RequiredQty
                                    </td>
                                    <td>
                                        @proj.RemainingQty
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">
                                    No Records Found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (pageList != null)
                {
                    <div>
                        <div class="row">
                            <em>Selected @pageList.Count() items out of @filteredList.Count() items.</em>
                        </div>
                        @if (totalPage > 1)
                        {
                            <div class="row">
                                @for (var pageIndex = 0; pageIndex < totalPage; pageIndex++)
                                {
                                    var btnCount = pageIndex + 1;
                                    <button class="btn btn-primary" @onclick="()=>PageBtnClick(btnCount)">@btnCount</button>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
    @if (selectedItem != null)
    {
        <div class="row">
            <div class="data-controller">
                <button class="btn btn-primary" @onclick="()=> { showManageItem = true; }">Update</button>
                @*<button type="button" class="btn btn-danger" @onclick="()=> { showConfirmModal = true; }">Delete</button>*@
            </div>
        </div>
    }
    @if (showManageItem) { 
        <ProjectItemModal ConfirmationResult="ItemManageResult" ProjectItemsId="Convert.ToInt32(selectedItem)" ProjectId="ProjectId"/>
    }
</div>

@code {
    private List<ViewModel.ProjectItemViewModel> dataList;
    private int? selectedItem;
    private bool skipRenderOnce = false;
    private Business.Helpers.ResultHandler notif = new();

    private int currentPage = 1;
    private int totalPage = 0;
    private int rowPageCount = 5;
    private List<ViewModel.ProjectItemViewModel> filteredList;
    private List<ViewModel.ProjectItemViewModel> pageList;
    [Parameter]
    public int ProjectId { get; set; }
    private bool showManageItem = false;

    protected override bool ShouldRender()
    {
        if (skipRenderOnce)
        {
            skipRenderOnce = false;
            return false;
        }
        return true;
    }
    private async Task SyncItemsTable() {
        using (var DbAccess = new Business.Project.Facades.ProjectItems())
        {
            dataList = ViewModel.ProjectItemViewModel.ToModelList(await DbAccess.GetByProjectIdWithInventory(ProjectId));
        }
        if (dataList != null)
        {
            filteredList = dataList;
            RefreshTablePage();
        }
    }
    protected override async Task OnInitializedAsync()
    {
        await SyncItemsTable();
        notif = await session.GetItemAsync<Business.Helpers.ResultHandler>(Business.Globals.SessionNotifName);
        await session.ClearAsync();
    }

    private void PageBtnClick(int newPage)
    {
        if (currentPage != newPage)
        {
            currentPage = newPage;
            RefreshTablePage();
        }
        else
        {
            skipRenderOnce = true;
        }
    }
    private void RefreshTablePage()
    {
        if (filteredList.Count() > 0)
        {
            var _totalPage = (decimal)filteredList.Count() / (decimal)rowPageCount;
            totalPage = Convert.ToInt32(Math.Ceiling(_totalPage));

            var firstItemPageIndex = currentPage > 1 ? (currentPage - 1) * rowPageCount : 0;
            var retrieveItemCount = (currentPage != totalPage) ? rowPageCount : (filteredList.Count() - ((currentPage - 1) * rowPageCount));
            pageList = filteredList.GetRange(firstItemPageIndex, retrieveItemCount).ToList();
        }
        else
        {
            pageList = null;
        }
    }
    private void RowClick(int id)
    {
        if (selectedItem == id) { showConfirmModal = false; }
        selectedItem = (selectedItem != id) ? id : null;
        if (showManageItem) { showManageItem = false; }
    }
    private string IsActive(int id)
    {
        return (selectedItem != null && id == selectedItem) ? "row-active" : "row-not-active";
    }

    private async void DeleteClick()
    {
        using (var DbAccess = new Business.Project.Facades.ProjectItems())
        {
            var _id = Convert.ToInt32(selectedItem);
            var result = await DbAccess.Remove(_id);
            if (result.Result)
            {
                dataList = dataList.Where(c => c.ProjectId != _id).ToList();
                filteredList = dataList;
                RefreshTablePage();
                selectedItem = null;
            }

            notif = new Business.Helpers.ResultHandler()
            {
                ResultMsg = result.ResultMsg,
                Result = result.Result,
            };
        }
    }
    private void SearchItem(ChangeEventArgs args)
    {
        var searchKey = args.Value.ToString();
        if (string.IsNullOrEmpty(searchKey))
        {
            filteredList = dataList;
            RefreshTablePage();
            return;
        }
        filteredList = dataList.Where(c => c.Item.Description.ToLower().Contains(searchKey)).ToList();
        RefreshTablePage();

    }

    private bool showConfirmModal = false;
    private void getConfirmModalResult(bool _result)
    {
        if (_result)
        {
            DeleteClick();
        }
        showConfirmModal = false;
    }
    private async Task ItemManageResult(Business.Helpers.ResultHandler result) {
        notif = result;
        showManageItem = false;
        selectedItem = null;
        await SyncItemsTable();
    }
}
