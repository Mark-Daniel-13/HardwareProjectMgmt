<MudDrawer @bind-Open="@collapseNavMenu" Elevation="5" Fixed="false" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
    <MudNavMenu Style="margin-top:1em">
        <MudNavLink Match="NavLinkMatch.All" Href="" Icon="@Icons.Filled.Store">Dashboard</MudNavLink>
        <MudNavLink Href="Admin/Project" Icon="@Icons.Filled.Report">Projects</MudNavLink>
        <MudNavLink Href="Admin/Inventory" Icon="@Icons.Filled.CheckBox">Inventory</MudNavLink>
        <MudNavLink Href="Admin/Product" Icon="@Icons.Filled.ShoppingCart">Product</MudNavLink>
        <MudNavLink Href="Admin/Category" Icon="@Icons.Filled.Category">Category</MudNavLink>
        <MudNavLink Href="Admin/User" Icon="@Icons.Filled.ManageAccounts">User</MudNavLink>
    </MudNavMenu>
</MudDrawer>
@code {
    [Parameter]
    public bool setDrawerStatus { get; set; }
    private bool collapseNavMenu = false;

    protected override void OnParametersSet()
    {
        collapseNavMenu = setDrawerStatus;
        base.OnParametersSet();
    }
}
